MainLayoutForPyGame:

<MainLayoutForPyGame>:
    Button:
        text:"Submit"
        on_press: root.on_submit()
        size_hint: .2,.2
        pos: root.height//2, root.width//2

<MainLayoutKivy@GridLayout>
    rows: 1
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            size_hint: 3,1
            id:gravity_canvas
            canvas:
        BoxLayout:
            orientation: "vertical"
            size_hint: 1,1
            TextInput:
                id: gravity_value
                text: "Enter the gravity value"
                multiline: False
            Button:
                text:"Submit"
                on_press: root.on_submit(gravity_value.text,gravity_canvas)

















